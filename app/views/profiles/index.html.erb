<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      </br>
      <th>Birthday</th>
      </br>
      <th>About me</th>
      </br>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
    <tr>
      <td><%= profile.name %></td>
      <td><%= profile.birthday %></td>
      <td><%= profile.about_me %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit Profile', edit_profile_path(@user.profile) %> <br/>
<%= link_to 'New Profile', new_profile_path %>
