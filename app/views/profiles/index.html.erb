<div class="section-heading">
<p id="notice"><%= notice %></p>
</div>

<div class="section-heading">
<table class="table" style="width:100%">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>About me</th>
    </tr>
  </thead>
  </div>
  <tbody>
    <% @profiles.each do |profile| %>
    <tr>

      <% if !profile.image %>
        <%= image_tag profile.image.default_url %>
      <% else %>
        <td><%= image_tag profile.image.url %></td>
      <% end %>
      <td><%= profile.name %></td>
      <td><%= profile.birthday %></td>
      <td><%= profile.about_me %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  <br>

  <div class="section-heading">

    <% if user_signed_in?%>
    <%= link_to 'Edit Profile', edit_profile_path(@user.profile), :class => 'myButton' %>
    <% end %>
    <br/>
  </div>
