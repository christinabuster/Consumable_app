<div class="section-heading">
<p id="notice"><%= notice %></p>
</div>

<div class="section-heading">
<table class="table" style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      </br>
      <th>Birthday</th>
      </br>
      <th>About me</th>
      </br>
      <th colspan="3"></th>
    </tr>
  </thead>
  </div>
  <tbody>
    <% @profiles.each do |profile| %>
    <tr>
      <td><%= profile.name %></td>
      <td><%= profile.birthday %></td>
      <td><%= profile.about_me %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class="section-heading">
    <h6>
    <% if user_signed_in?%>
    <%= link_to 'Edit Profile', edit_profile_path(@user.profile) %>
    <% end %>
